<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/biz_weather_padding"
    android:background="@drawable/biz_plugin_weather_shenzhen_bg"
     >

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15.0dip"
        android:singleLine="true"
        android:text="N/A"
        android:textColor="@android:color/white"
        android:textSize="40.0sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/city"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="15.0dip"
        android:singleLine="true"
        android:text="N/A"
        android:textColor="@android:color/white"
        android:textSize="15.0sp" />
      <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/time"
        android:layout_marginLeft="15.0dip"
        android:singleLine="true"
        android:text="N/A"
        android:textColor="@android:color/white"
        android:textSize="15.0sp" />

   

    <RelativeLayout
        android:id="@+id/buju"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/humidity"
        android:layout_centerInParent="true"
        android:layout_marginTop="5.0dip" >
        android:layout_alignParentLeft="true"

        <ImageView
            android:id="@+id/weather_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/biz_plugin_weather_qing" />
            android:layout_alignParentLeft="true"

        <TextView
            android:id="@+id/week_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/weather_img"
            android:singleLine="true"
            android:text="N/A"
            android:textColor="@android:color/white"
            android:textSize="@dimen/biz_plugin_weather_climate_textsize" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/week_today"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/weather_img"
            android:singleLine="true"
            android:text="N/A"
            android:textColor="@android:color/white"
            android:textSize="@dimen/biz_plugin_weather_temperature_textsize" />

        <TextView
            android:id="@+id/climate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/weather_img"
            android:singleLine="true"
            android:text="N/A"
            android:textColor="@android:color/white"
            android:textSize="@dimen/biz_plugin_weather_climate_textsize" />

        <TextView
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/climate"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/weather_img"
            android:singleLine="true"
            android:text="N/A"
            android:textColor="@android:color/white"
            android:textSize="@dimen/biz_plugin_weather_climate_textsize" />
    </RelativeLayout>
    <LinearLayout 
        android:layout_below="@id/buju"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
       
         <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
           
            android:orientation="vertical">
            <TextView
            android:id="@+id/oneweek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_marginLeft="5dip"
            android:singleLine="true"
            android:text="N/A"
            android:textColor="@android:color/white"
            android:textSize="@dimen/biz_plugin_weather_climate_textsize" />
          
            <ImageView
                android:id="@+id/oneimage"
                android:layout_width="92dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:src="@drawable/biz_plugin_weather_qing" />

            android:layout_alignParentLeft="true"
            <TextView
            android:id="@+id/onetemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:layout_marginLeft="5dip"
            android:singleLine="true"
            android:text="N/A"
            android:textColor="@android:color/white"
            android:textSize="@dimen/biz_plugin_weather_climate_textsize" />
            <TextView
            android:id="@+id/oneclimate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_marginLeft="5dip"
            android:singleLine="true"
            android:text="N/A"
            android:textColor="@android:color/white"
            android:textSize="@dimen/biz_plugin_weather_climate_textsize" />
            <TextView
            android:id="@+id/onewind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_marginLeft="5dip"
            android:singleLine="true"
            android:text="N/A"
            android:textColor="@android:color/white"
            android:textSize="@dimen/biz_plugin_weather_climate_textsize" />
        </LinearLayout>
         <LinearLayout 
            android:layout_height="wrap_content"
            
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <TextView
            android:id="@+id/twoweek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_marginLeft="5dip"
            android:singleLine="true"
            android:text="N/A"
            android:textColor="@android:color/white"
            android:textSize="@dimen/biz_plugin_weather_climate_textsize" />
          
            <ImageView
                android:id="@+id/twoimage"
                android:layout_width="94dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:src="@drawable/biz_plugin_weather_qing" />

            android:layout_alignParentLeft="true"
            <TextView
            android:id="@+id/twotemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_marginLeft="5dip"
            android:singleLine="true"
            android:text="N/A"
            android:textColor="@android:color/white"
            android:textSize="@dimen/biz_plugin_weather_climate_textsize" />
            <TextView
            android:id="@+id/twoclimate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_marginLeft="5dip"
            android:singleLine="true"
            android:text="N/A"
            android:textColor="@android:color/white"
            android:textSize="@dimen/biz_plugin_weather_climate_textsize" />
            <TextView
            android:id="@+id/twowind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:layout_marginLeft="5dip"
            android:singleLine="true"
            android:text="N/A"
            android:textColor="@android:color/white"
            android:textSize="@dimen/biz_plugin_weather_climate_textsize" />
        </LinearLayout> <LinearLayout 
            android:layout_height="wrap_content"
            
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <TextView
            android:id="@+id/threeweek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_marginLeft="5dip"
            android:singleLine="true"
            android:text="N/A"
            android:textColor="@android:color/white"
            android:textSize="@dimen/biz_plugin_weather_climate_textsize" />
          
            <ImageView
                android:id="@+id/threeimage"
                android:layout_width="97dp"
                android:layout_height="92dp"
                android:src="@drawable/biz_plugin_weather_qing" />

            android:layout_alignParentLeft="true"
            <TextView
            android:id="@+id/threetemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_marginLeft="5dip"
            android:singleLine="true"
            android:text="N/A"
            android:textColor="@android:color/white"
            android:textSize="@dimen/biz_plugin_weather_climate_textsize" />
            <TextView
            android:id="@+id/threeclimate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_marginLeft="5dip"
            android:singleLine="true"
            android:text="N/A"
            android:textColor="@android:color/white"
            android:textSize="@dimen/biz_plugin_weather_climate_textsize" />
            <TextView
            android:id="@+id/threewind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_marginLeft="5dip"
            android:singleLine="true"
            android:text="N/A"
            android:textColor="@android:color/white"
            android:textSize="@dimen/biz_plugin_weather_climate_textsize" />
        </LinearLayout>
        
    </LinearLayout>

</RelativeLayout>